<div class="center hero-unit">
<h1>Today's Jobs</h1>

<table class ="table">
  <thead>
    <tr>
      <th>Job no.</th>
      <th>Date</th>
      <th>Hours</th>
      <th>Tip</th>
      <th>Total</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
    
      <tr>
        <td><%= job.id %></td>
        <td><%= job.date %></td>
        <td><%= job.hours %></td>
        <td><%= job.tip %></td>
        <td><%= job.hours * 22 + job.tip %></td>

        
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Delete', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
<%= link_to 'New Job', new_job_path, class: "btn btn-danger btn-block" %>
